{
  "compilerOptions": {
    "module": "system",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "../../built/local/tsc.js",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
